{% extends 'base.html.twig' %}
{% import '_/buttons.html.twig' as buttons %}

{% block title %}{{ 'User'|trans }}{% endblock %}

{% block body %}
    <div class="btn-group float-end" role="group">
        {{ buttons.back(path('user_index')) }}
        {{ buttons.edit(path('user_edit', {'id': user.id})) }}
        {{ include('user/_delete_form.html.twig') }}
    </div>

    <h1>{{ 'User'|trans }}</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ user.id }}</td>
        </tr>
        <tr>
            <th>Identifier</th>
            <td>{{ user.userIdentifier }}</td>
        </tr>
        <tr>
            <th>GoogleId</th>
            <td>{{ user.googleId }}</td>
        </tr>
        <tr>
            <th>GitHubId</th>
            <td>{{ user.gitHubId }}</td>
        </tr>
        <tr>
            <th>Role</th>
            <td>{{ user.role|role_name }}</td>
        </tr>
        </tbody>
    </table>
{% endblock %}
