<table class="table">
    <thead>
    <tr>
        <th>Id</th>
        <th>Identifier</th>
        <th>Social</th>
        <th>Role</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    {% for user in users %}
        <tr>
            <td>{{ user.id }}</td>
            <td><a href="{{ path('user_show', {'id': user.id}) }}">{{ user.userIdentifier }}</a></td>
            <td>
                {% if user.googleId %}
                    Google
                {% elseif user.gitHubId %}
                    GitHub
                {% else %}
                    n/a
                {% endif %}
            </td>
            <td>{{ user.role|role_name }}</td>
            <td>
                <div class="btn-group">
                    <span {{ stimulus_controller('modal-form', {
                        formUrl: path('user_edit', { id: user.id, ajax: 1 })
                    }) }}
                    >
                        <button
                                class="btn btn-sm btn-outline-primary"
                                data-action="modal-form#openModal"
                        >
                            <span class="oi oi-pencil"></span>
                        </button>
                        {{ include('_modal.html.twig', {
                            modalTitle: 'Edit user'|trans
                        }) }}
                    </span>
                    <form
                            {{ stimulus_controller('submit-confirm', {
                                title: "Remove this item?",
                                icon: "warning",
                                confirmButtonText: "Yes, remove it!",
                                submitAsync: true,
                            }) }}
                            action="{{ path('user_delete', {
                                id: user.id,
                            }) }}"
                            method="post"
                            data-action="submit-confirm#onSubmit"
                            class="form-inline"
                    >
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}"/>
                        <input type="hidden" name="_method" value="DELETE"/>

                        <button class="btn btn-sm btn-outline-danger">
                            <span class="oi oi-trash"></span>
                        </button>
                    </form>
                </div>
            </td>
        </tr>
    {% else %}
        <tr>
            <td colspan="4">no records found</td>
        </tr>
    {% endfor %}
    </tbody>
</table>
